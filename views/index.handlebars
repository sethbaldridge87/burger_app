<div class="container" id="main_content">
    <div class="row">
        <div class="col s12">
            <h1>Burger App</h1>
            <img src="/assets/images/burger.png" alt="logo">
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <form>
                <div class="input-field">
                <i class="material-icons prefix">restaurant</i>
                <input type="text" name="burger_choice" id="burger_choice" placeholder="What kind of burger would you like?">
                <button class="btn" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <div id="all_burgers" class="row">
        <div id="new_burgers" class="col s6">
            <h2>New Burgers</h2>
        <!--The data below is collected from an api call in the burgersController.js file-->
            {{#each burgers}}
                {{#unless eaten}}
                    {{> burgers/burger-block eaten=1}}
                {{/unless}}
            {{/each}}
        </div>
        <div id="eaten_burgers" class="col s6">
            <h2>Eaten</h2>
            {{#each burgers}}
                {{#if eaten}}
                    {{> burgers/burger-block eaten=0}}
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>